{
  "compilerOptions": {
    "composite": true,
    "target": "es2016",
    "module": "commonjs",
    "paths": {
      // このパッケージ外の外部ライブラリ扱いになるので、ビルド後の *.d.ts ファイルが出力されているディレクトリを指定する
       "@core/*": ["../core/dist/src/*"]
     },
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "references": [{
    "path": "../core"
  }],
  "include": ["./src/**/*.ts"]
}
