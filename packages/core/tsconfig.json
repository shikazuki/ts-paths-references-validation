{
  "compilerOptions": {
    "composite": true,
    "target": "es2016",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["./src/**/*.ts"]
}
